# python-class
#encode.py
#This program prompts the user for a string message.
#The message is then converted into a numeric code.

def main():
    #declare and initialize variables
    #string inputMessage = ""
    inputMessage = ""

    #intro
    print("WELCOME TO THE ENCRYPTION PROGRAM!!\n")

    #Prompt the user for inputMessage
    inputMessage = input("Enter the message to be encoded: ")

    #Use a for loop to traverse the string message to convert
    #each character to a numeric value
    for ch in inputMessage:
        print(ord(ch), end = " ")

main() 
